doctype html
html(lang='en')
head
    title Welcome
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
body
    nav.navbar.navbar-expand-lg.navbar-light.nav-style
        a.navbar-brand(href='#') FindUrPanditji
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSuportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon 
        
        .collapse.navbar-collapse#navbarSupportedContent
            ul.navbar-nav.mr-auto
                li.new-item-active
                    a.nav-link(href='/users/home-page') Home 
                        span.sr-only (current)

                li.nav-item
                    a.nav-link(href='/users/book-puja') Book Puja

                li.nav-item.dropdown
                    a.nav-link.dropdown-toggle#navbarDropdown(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Gods
                    .dropdown-menu(aria-labelledby='navbarDropdown')
                        a.dropdown-item(href='./users/shiv') Shiv ji
                        a.dropdown-item(href='./users/laxmi') Laxmi ji
                        a.dropdown-item(href='./users/vishnu') Vishnu ji
                        a.dropdown-item(href='./users/durga') Durga ji
                        a.dropdown-item(href='./users/ganesh') Ganesh ji
                        a.dropdown-item(href='./users/saraswati') Saraswati ji
                        a.dropdown-item(href='./users/bhoomi-puja') Bhoomi ji
            ul.navbar-nav.mr-auto
                if user
                    li.nav-item(class=(title == 'Bookings' ? 'active' : ''))
                        a.nav-link(href='#') Bookings

                if !user
                    li.nav-item(class=(title == 'Register' ? 'active' : ''))
                        a.nav-link(href='/users/registration-pandit') Register

                    li.nav-item(class=(title == 'Login' ? 'active' : ''))
                        a.nav-link(href='/users/login-pandit') Login

                li.nav-item
                    a.nav-link(href='/users/contact-us') Contact us

            ul.nav.navbar-nav.navbar-right
                if user
                    li-nav-item
                        a.nav-link(href='/users/logout') Logout
                        
        //- .container
        != messages
    
    block content
    script(src='/javascrip/jquery-3.3.1.min.js')
    script(src='/javascrip/boostrap.js')
